<Types>
  <Type>
    <Name>System.Type</Name>
    <Members>
      <ScriptProperty>
        <Name>TypeType</Name>
        <GetScriptBlock>
          if($true -or $this.Provider -is [Serpen.PS.TypeProvider])
          {
            if ($this.BaseType?.Name -eq 'Enum') {
                return 'Enum'
            } elseif ($this.get_IsInterface()) {
                return 'Interface'
            } elseif ($this.get_IsGenericType()) {
                if ($this.get_IsValueType()) {
                return 'ValueType&lt;&gt;'
                } else {
                return 'Type&lt;&gt;' 
                }
            } elseif ($this.IsSubclassOf([System.Exception]) -or $this -is [System.Exception]) {
                return 'Exception'
            } elseif ($this.IsSubclassOf([System.Attribute]) -or $this -is [System.Attribute]) {
                return 'Attribute'
            } elseif ($this.get_IsPrimitive()) {
                return 'Primitive'
            } elseif ($this.get_IsValueType()) {
                return 'ValueType'
            } else {
                return 'Type'
            }
          }
        </GetScriptBlock>
      </ScriptProperty>
    </Members>
  </Type>
</Types>